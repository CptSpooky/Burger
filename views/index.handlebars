<h1>Eat-da-burger</h1>

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>{{this.burger_name}}</li>
      <form action="/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="false">
        <button class="btn btn-warning" type="submit">Devour</button>
      </form>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>
  <ul>
    {{#each burgers}} 
      {{#if this.devoured}}
        <li>{{this.burger_name}}</li>
      {{/if}} 
    {{/each}}
  </ul>
</div>

<h2>Add Burger:</h2>

<form class="create-update-form" action="/" method="POST">
  <div class="form-group">
      <label for="dab">Burger Name:</label>
      <input type="text" id="dab" name="burger_name">
  </div>
  <button class="btn btn-primary" type="submit">Add Burger</button>
</form>